@model OnsiteArtifactRecordSupplementMVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2 class="text-white">@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="text-white">Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group text-white">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-white">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-white">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-white">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-white">
        @Html.LabelFor(m => m.DegreeObtained, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.DegreeObtained, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-white">
        @Html.LabelFor(m => m.AlmaMater, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.AlmaMater, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-white">
        @Html.LabelFor(m => m.ArchaeologicalSpecialty, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ArchaeologicalSpecialty, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-white">
        @Html.LabelFor(m => m.PublishedWorks, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PublishedWorks, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-white">
        @Html.LabelFor(m => m.CurrentSites, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CurrentSites, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-white">
        @Html.LabelFor(m => m.PreviousSitesWorked, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PreviousSitesWorked, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group text-white">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default text-white" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
